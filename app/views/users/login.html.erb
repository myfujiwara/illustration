<div class = "login">
  <div class = "login_form">
    <h1>イラスト投稿サイト</h1>
      <%= form_for @user, url: login_path do |f| %>
        <div class = "field">
          <%= f.email_field :email, placeholder: "メールアドレス" %>
        </div>
        <div class = "field">
          <%= f.password_field :password, placeholder: "パスワード" %>
        </div>
        <button>ログイン</button>
      <% end %>
    <div class = "registration_link">
      <p><%= link_to registration_path do %>新規登録<% end %></p>
    </div>
  </div>
</div>